@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>进行审题</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />
    <style type="text/css">
        body {
            width: 100%;
            height: 650px;
            background-color: #FFFFFF;
            margin: 0;
        }

        .style1 {
            width: 80%;
            height: 95%;
            padding-top: 6%;
            padding-left: 25%;
        }

        .style2 {
            width: 100%;
            height: 100%;
            background-color: #b5d2b6;
            opacity: 0.7;
        }

        .title, .source, .suggest, .type, .pass {
            width: 80%;
            height: 10%;
            clear: both;
        }

        .introduction {
            width: 80%;
            height: 50%;
            clear: both;
        }

        .right {
            float: right;
            width: 50%;
            padding-top: 5%;
            padding-right: 8%;
        }

        .left {
            float: left;
            width: 50%;
            padding-top: 5%;
            padding-left: 4%;
        }
    </style>
</head>
<body>
    <div class="style1">
        <div class="style2">
            <form action="#" method="post">
                <div id="title">
                    <span class="left">课题标题:</span>
                    <span class="right">@ViewBag.title</span>
                </div>
                <div class="source">
                    <span class="left">课题来源</span>
                    <span class="right">@ViewBag.source</span>
                </div>
                <div class="type">
                    <span class="left">课题类型</span>
                    <span class="right">@ViewBag.type</span>
                </div>
                <div class="introduction">
                    <span class="left">课题介绍</span>
                    <section class="right">
                       @ViewBag.content
                    </section>
                </div>
                <div class="suggest">
                    <span class="left">修改意见</span>
                    <textarea class="right"></textarea>
                </div>
                <div class="pass">
                    <span class="left">选择是否通过</span>
                    <select>
                        <option>通过</option>
                        <option>建议再修改</option>
                    </select>
                </div>
                <button class="btn btn-primary">确定提交</button>
            </form>
        </div>
    </div>
</body>
</html>