    <link rel="stylesheet" href="~/Content/bootstrap-table.css" type="text/css"/>
</head>

<body>
    <header>
        <div class="admin">
            <a href="#">
                <span class="glyphicon glyphicon-leaf"></span>
                <span class="adminstrastor">@ViewBag.username</span>
            </a>
        </div>
        <div class="setting">
            <a href="#">
                <span class="glyphicon glyphicon-tasks"></span>
            </a>
        </div>
        <div class="warns">
            <a href="#">
                <span class="glyphicon glyphicon-bell"></span>
            </a>
        </div>
    </header>
    <div class="content ">

        <aside class="vertical ">
            <ul>
                <li class="select-topic">
                    <a id="system" class="system" href="#">
                        <span class="glyphicon glyphicon-th-list"></span>
                        选择课题
                    </a>
                </li>

                <li class="apply-topic">
                    <a id="apartment" href="#">
                        <span class="glyphicon glyphicon-pencil"></span>
                        申请自主拟题
                    </a>

                </li>
                <li class="Protocol-self">
                    <a href="#">
                        <span class="glyphicon glyphicon-pencil"></span>
                        自主拟题
                    </a>
                </li>
                <li class="Thesis">
                    <a href="#">
                        <span class="glyphicon glyphicon-cog"></span>
                        我的论题
                    </a>
                </li>
            </ul>
        </aside>


        <div class="contain">

            <div class="daohang">

                <div class="search col-xs-2">

                    <div class="input-group">
                        <input class="form-control" placeholder="search" />
                        <span class="input-group-btn">
                            <button class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                        </span>
                    </div>

                </div>
            </div>

            <div class="anm-main">

                <div id="selects">
                    <!--选择课题-->
                    @*<table class="table table-condensed table-hover" id="teacher-thesis-tb">
                        <thead>
                            <tr>
                                <th>序号</th>
                                <th>类型</th>
                                <th>课题名称</th>
                                <th>出题老师</th>
                                <th>已选人数</th>
                                <th>可选人数</th>
                                <th>查看该论题</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>*@
                    <table id="teacher-thesis-tb">
                        
                    </table>
                    @*<div id="padge">
                        <ul class="pagination">
                            <li><a href="#">«</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#">6</a></li>
                            <li><a href="#">»</a></li>
                        </ul>
                    </div>*@
                </div>

                <div id="applys">
                    <!--申请拟题-->
                    <div id="applys-set">
                        <form action="#" method="post" role="form">
                            <input type="text" value="@ViewBag.sno" class="form-control" id="sno" readonly="readonly"/><br />
                            <select class="form-control" id="apply-select">
                                <option value="1">申请自拟题</option>
                                <option value="0">取消自拟题</option>
                            </select><br />
                            <input type="button" value="提交" class="form-control btn-success" id="apply-make-thesis-btn"/>
                        </form>
                    </div>
                </div>

                <div id="protocol-self">
                    <!--自拟课题-->
                    <div id="protocol-content">
                        <form action="#" method="post" role="form">
                            <table>
                                <tr style="display: none">
                                    <td id="Number"><label for="number">序号：</label></td>
                                    <td><input type="text" id="number" class="form-control" /></td>
                                </tr>
                                <tr>
                                    <td><label for="name">论题名称：</label></td>
                                    <td><input type="text" id="name" class="form-control" /></td>
                                </tr>
                                <tr>
                                    <td><label for="type">论题类型：</label></td>
                                    <td>
                                        <select id="type" class="form-control">
                                            <option value="应用研究类">应用研究类</option>
                                            <option value="基础研究类">基础研究类</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td><label for="sourse">完成形式：</label></td>
                                    <td>
                                        <select id="sourse" class="form-control">
                                            <option value="1">单独完成</option>
                                            <option value="2">两人合作</option>
                                            <option value="3">三人合作</option>
                                            <option value="4">四人合作</option>
                                            <option value="5">五人合作</option>
                                        </select>
                                    </td>
                                </tr>

                                <tr>
                                    <td><label for="sourse">合作成员：</label></td>
                                    <td>
                                        <select id="partner" class="form-control">
                                            <option value="自拟">***</option>
                                            <option value="教师拟">***</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td><label for="times">毕业年份：</label></td>
                                    <td>
                                        <select id="times" class="form-control">
                                            <option value="2018">2018</option>
                                            <option value="2019">2019</option>
                                            <option value="2020">2020</option>
                                            <option value="2021">2021</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td><label for="teacher">指导老师：</label></td>
                                    <td>
                                        <select id="teacher" class="form-control">
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td><label for="content">论题内容：</label></td>
                                    <td><textarea rows="5" id="content" class="form-control"></textarea></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td><button class="btn btn-success">修改</button><button type="submit" class="btn btn-success">提交</button></td>
                                </tr>
                            </table>
                        </form>
                    </div>
                </div>

                <div id="thesis">
                     <div class="thesis1">
                        <form action="#" method="post" class="form">
                            <div class="name1">
                                <span class="left1"><b>论题名称:</b></span>
                                <span class="right1">@ViewBag.thesisInfo.name</span>
                            </div>
                            <div class="status1">
                                <span class="left1"><b>审核状态:</b></span>
                                <span class="right1">@ViewBag.status</span>
                            </div>
                            <div class="type1">
                                <span class="left1"><b>论题类型:</b></span>
                                <span class="right1">@ViewBag.thesisInfo.type</span>
                            </div>
                            
                            <div class="charging1">
                                <span class="left1"><b>负责模块:</b></span>
                                <span class="right1">@ViewBag.thesisInfo.response</span>
                            </div>

                            <div class="suggest1">
                                <span class="left1"><b>指导老师意见:</b></span>
                                <div class="suggest11" style="text-align:left">
                                    @foreach (string t in @ViewBag.advertise)
                                    {
                                        <p>@t</p>
                                    }
                                </div>
                            </div>
                            <div class="content1">
                                <span class="left1"><b>论题内容:</b></span>
                                <div class="content11">@ViewBag.thesisInfo.content</div>
                            </div>
                        </form>
                    </div>
                </div>


            </div>

            <footer class="footer">
                <div class="limits">
                    <p class="limits">Copyright© 2016-2017 BY 88888 .All Rights Reserved</p>
                </div>
                <div class="time">
                </div>
            </footer>
        </div>
    </div>
    <script src="~/Scripts/jquery.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/SystemAdministrator/bootstrap-select.js" type="text/javascript" charset="utf-8"></script>
