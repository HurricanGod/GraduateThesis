    <script src="~/Scripts/bootstrap-table.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/bootstrap-table-zh-CN.js" type="text/javascript" ></script>
    <script src="~/Scripts/student.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/student-add.js" type="text/javascript" charset="utf-8"></script>
</body>

</html>
